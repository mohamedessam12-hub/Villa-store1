@model Villa_mvc.VM.VillaNumberCreateVM

<form asp-action="CreateVillaNumber" method="post">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Villa</h1>
        <hr />

        <div class="row">
            <!-- عرض الأخطاء العامة أعلى الصفحة -->
            <div asp-validation-summary="All" class="alert alert-danger"></div>

            <!-- Villa Number -->
            <div class="col-2">
                <label asp-for="CreateDTO.VillaNo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CreateDTO.VillaNo" class="form-control" />
                <span asp-validation-for="CreateDTO.VillaNo" class="text-danger"></span>
            </div>

            <!-- Villa ID -->
            <div class="col-2">
                <label asp-for="CreateDTO.VillaId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="CreateDTO.VillaId" class="form-select" asp-items="@Model.ListItems">
                    <option disabled selected>--Select Villa--</option>
                </select>
                <span asp-validation-for="CreateDTO.VillaId" class="text-danger"></span>
            </div>

            <!-- Special Details -->
            <div class="col-2">
                <label asp-for="CreateDTO.SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="CreateDTO.SpecialDetails" class="form-control" rows="5"></textarea>
                <span asp-validation-for="CreateDTO.SpecialDetails" class="text-danger"></span>
            </div>

            <!-- الأزرار -->
            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNumber" asp-controller="VillaNumber" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
        <!-- تحميل سكربتات التحقق -->
        <partial name="_ValidationScriptsPartial" />
}
